<%- include('../partials/header', {title:"Order Fulfillment", user:user}) -%>

<h1>Profile</h1>

<h3>Personal Details:</h3>
  <p>Email: <%=user._json.email%></p>

<br>
<h3>Open Sales</h3>
<table>
  <tr>
  <th>Title</th>
  <th>Description</th>
  <th>Image</th>
  </tr>
  <% for(let i = 0; i < openT.length; i++){ %>
  <tr>
    <td><%=openT[i]["title"]%></td>
      <td><%=openT[i]["description"]%></td>
      <td><img src='<%=openT[i]["imageSRC"]%>' width='50%'></td>
    </tr>
  <%}%>

</table>
  <br>
  <h3>Closed Sales</h3>
  <table>

    <tr>
    <th>Buyer</th>
    <th>Title</th>
    <th>Description</th>
    <th>Image</th>
    </tr>
    <% for(let i = 0; i < closedT.length; i++){ %>
    <tr>
      <td><%=closedT[i]["userBuyId"]%></td>
      <td><%=closedT[i]["title"]%></td>
        <td><%=closedT[i]["description"]%></td>
        <td><img src='<%=closedT[i]["imageSRC"]%>' width='50%'></td>
      </tr>
    <%}%>

</table>

<br>
<h3>Bought Items</h3>
<table>

  <tr>
  <th>Seller</th>
  <th>Title</th>
  <th>Description</th>
  <th>image</th>

  </tr>
  <% for(let i = 0; i < boughtItems.length; i++){ %>

  <tr>
    <td><%=boughtItems[i]["userPostId"]%></td>
    <td><%=boughtItems[i]["title"]%></td>
      <td><%=boughtItems[i]["description"]%></td>
        <td><img src='<%=boughtItems[i]["imageSRC"]%>' width='50%'></td>
    </tr>
  <%}%>
</table>
